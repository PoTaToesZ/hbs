<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Home Page</title>
</head>
<body>
    <h1 class="redText allBorder">Hello World</h1>
    <h2>Hello {{name}}</h2>
    <h3>Product</h3>
    <ul class="allBorder">
        {{#each products}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
    <h3>Product 2</h3>
    <ul class="allBorder">
        {{#each products2}}
            {{#if onsale}}
                <li class="redText">{{@index}} - {{#mbold}}{{name}}{{/mbold}} - {{price}}</li>             
            {{else}}
                <li>{{@index}} - {{name}} - {{price}}</li>
            {{/if}}
        {{/each}}
    </ul>
    <h3>Product 3</h3>
    <ul class="allBorder">
        {{#each products2}}
            {{#if (checkPriceGT200 price)}}
                <li class="redText">{{@index}} - {{name}} - {{price}}</li> 
            {{else}}
                <li>{{@index}} -{{name}} - {{price}}</li> 
            {{/if}}           
        {{/each}}
    </ul>
    <h3>Product List</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Price</th>
        </tr>
        {{#each content}}
            <tr>
                <td>{{name}}</td>
                <td>{{color}}</td>
                <td>{{price}}</td>
            </tr>
        {{/each}}
    </table>
</body>
</html>